FROM flecsi/flecsi:fedora_serial

ARG MPI
ARG RUNTIME
ARG TRAVIS
ARG TRAVIS_PULL_REQUEST
ARG TRAVIS_REPO_SLUG
ARG TRAVIS_BRANCH
ARG TRAVIS_COMMIT

WORKDIR /home/flecsi
RUN git clone --recursive https://github.com/${TRAVIS_REPO_SLUG}.git

WORKDIR flecsi-sp
RUN git fetch --tags
RUN if [ ${TRAVIS} = true ]; then \
      if [ ${TRAVIS_PULL_REQUEST} != false ]; then \
        git fetch "git://github.com/${TRAVIS_REPO_SLUG}" +refs/pull/"${TRAVIS_PULL_REQUEST}"/merge: ;\
        git checkout FETCH_HEAD; \
      else \
        git fetch --depth=10 "git://github.com/${TRAVIS_REPO_SLUG}" "${TRAVIS_BRANCH}"; \
        git checkout "${TRAVIS_COMMIT}"; \
      fi; \
      git submodule update; \
    fi
RUN mkdir build

WORKDIR build
RUN cmake -DENABLE_MPI=$MPI \
          -DFLECSI_RUNTIME_MODEL=$RUNTIME \
          -DENABLE_UNIT_TESTS=ON ..

RUN make VERBOSE=1 -j2
RUN make test
RUN make install DESTDIR=${PWD}
USER root
RUN make install
USER flecsi
WORKDIR /home/flecsi
